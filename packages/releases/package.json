{
  "name": "@bscotch/gamemaker-releases",
  "description": "Utility for combining GameMaker release data into a single feed.",
  "version": "0.0.1",
  "author": "Butterscotch Shenanigans",
  "repository": {
    "type": "git",
    "url": "https://github.com/bscotch/gamemaker-info.git",
    "directory": "packages/releases"
  },
  "license": "MIT",
  "keywords": [
    "gamemaker",
    "game-maker",
    "release",
    "release-notes",
    "patchnotes",
    "patch-notes",
    "changelog",
    "yoyo",
    "bscotch",
    "stitch",
    "rss",
    "feed"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "clean": "rimraf build dist *.tsbuildinfo **/*.tsbuildinfo",
    "test": "mocha --config ../../config/.mocharc.cjs",
    "test:dev": "mocha --config ../../config/.mocharc.cjs --forbid-only=false --parallel=false --timeout=9999999999",
    "watch": "tsc --build --watch"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "packageManager": "yarn@3.2.4",
  "dependencies": {
    "@bscotch/pathy": "^2.5.1",
    "@bscotch/utility": "^6.7.0",
    "fast-xml-parser": "^4.0.12",
    "html-entities": "^2.3.3",
    "node-fetch": "^3.3.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@types/chai": "^4",
    "@types/mocha": "^10.0.1",
    "@types/rimraf": "^3",
    "chai": "^4.3.7",
    "mocha": "^10.1.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.3"
  }
}
